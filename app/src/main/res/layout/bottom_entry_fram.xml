<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/entryfram_back"
    android:orientation="horizontal"
    android:paddingBottom="6dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="6dp">

    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:background="@drawable/entry_fram_back">

        <EditText
            android:id="@+id/friends_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="@null" />
    </RelativeLayout>

    <View
        android:layout_width="15dp"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/friends_send"
        android:layout_width="55dp"
        android:layout_height="40dp"
        android:background="@drawable/entry_send_shape"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:text="@string/entry_send_text"
        android:textColor="@color/edit_back"
        android:textSize="20dp" />

</LinearLayout>